<div class="container">
  <div class="row m-2">
    <div class="card-category" style="background-image: url('<%= cl_image_path @cocktail.photo.key %>')">
      <h5 class="card-title"><%= @cocktail.name %></h5>
      <% @cocktail.doses.each do |dose| %>
        <%= dose.description %> <br>
        <%= dose.ingredient.name %>
        <%= link_to "Delete Doses", dose_path(dose), method: :delete, class: 'btn btn-danger' %>
      <% end %>
    </div>
  </div>
</div>

<div class="text-center">
  <%= link_to 'Back to Cocktails Page', cocktails_path, class: 'btn btn-gradient' %>
  <%= link_to 'Create a Dose',  new_cocktail_dose_path(@cocktail), class: 'btn btn-flat' %>
</div>
