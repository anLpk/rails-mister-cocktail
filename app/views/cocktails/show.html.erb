<div class="container">
  <div class="row m-2">
      <h5 class="show-title"><%= @cocktail.name %></h5>
      <% @cocktail.doses.each do |dose| %>
        <%= link_to "Delete Doses", dose_path(dose), method: :delete, class: 'btn btn-delete' %>
        <p class="show-text">Description:<%= dose.description %></p> <br>
        <p class="show-text">Doses:<%= dose.ingredient.name %></p>
      <% end %>
  </div>
    <div class="show-banner card-category" style="background-image: url('<%= cl_image_path @cocktail.photo.key %>')">
    </div>
</div>

<div class="text-center">
  <%= link_to 'Back to Cocktails Page', cocktails_path, class: 'btn btn-gradient' %>
  <%= link_to 'Create a Dose',  new_cocktail_dose_path(@cocktail), class: 'btn btn-flat' %>
</div>
